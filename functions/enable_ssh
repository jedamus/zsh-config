enable_ssh() {

  #set -x

  alt_pfad=$(pwd)

  pfad=$HOME/.ssh
  private_key_list=$pfad/private_key_list

  eval "$(ssh-agent -s)"

  if [[ -f $private_key_list ]]; then
    private_keys=( $(cat $private_key_list) )
  else
    private_keys=( "id_rsa" )
  fi

  cd $pfad
  for private_key in $private_keys; do
    if [[ -f $private_key ]]; then
      ssh-add $private_key
    else
      echo "cannot find private key $private_key"
    fi
  done
  cd $alt_pfad
}
