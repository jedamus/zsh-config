#compdef man2pdf.sh man2ps.sh printman.sh

local ret=1

_arguments -C -s \
  '--help[display help]' \
  '*:files:->files' \
  && ret=0

if [ $service = printman.sh ]; then
  _description files expl 'file to print'
else
  _description files expl 'file to convert'
fi

_files "$expl[@]" -g '*.gz(-.)' 

return ret
